{
    "app-id" : "co.tauos.ValaTemplate",
    "runtime" : "co.tauos.Platform",
    "runtime-version" : "stable",
    "sdk" : "co.tauos.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.vala"],
    "command" : "co.tauos.ValaTemplate",
    "desktop-file-name-suffix": " (Development)",
    "finish-args" : [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--device=dri"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/vala/bin",
        "prepend-ld-library-path": "/usr/lib/sdk/vala/lib"
    },    
    "cleanup" : [
        "/cache",
        "/man",
        "/share/aclocal",
        "/share/devhelp",
        "/lib/systemd",
        "/include",
        "/lib/pkgconfig",
        "/lib/libvala*",
        "/share/gtk-doc",
        "/share/man",
        "/share/vala",
        "*.a",
        "*.la"
    ],
    "modules" : [
        {
            "name" : "vala-template",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddevelopment=true"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}
